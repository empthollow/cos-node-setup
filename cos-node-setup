#!/bin/bash

# OpenStack Deployment Setup Script
# Tested with: Bobcat (2023.2)
# Forward compatible through: 2025.1 (2-3 releases ahead)
# 
# SAFETY FEATURES:
# - Automatic backup of all configuration files before editing
# - Prerequisite checks (disk space, required commands, Python version)
# - Environment variable validation
# - Configuration file validation before modification
# - Service startup verification
# - Controller connectivity checks
# - Version compatibility warnings
#
# ERROR HANDLING:
# - Exit on first error (set -e)
# - Catch pipeline errors (set -o pipefail)
# - Trap errors and call cleanup handler
#

# Error handling
# Exit script on first error
set -o errexit  
# Catch errors in pipelines
set -o pipefail 
# make traps work inside functions
set -E

clean_resume()
{
# fix variable to work
echo "cleaning up..."
case $resumeclean in
	componenetstat		) 
		if [ "$archetype" = "controller" ]; then
			clean_compnents_controller
		else
			clean_components_node
		fi	
		;;
	mariadbstat		) 
		clear_mariadb_controller
		;;
	rabbitmqstat		) clean_rabbitmq_controller ;;
	memcachedstat		) clean_memcached_controller ;;
	etcdstat		) clean_etcd_controller ;;
	keystonestat		) clean_keystone_controller ;;
	glancestat		) clean_glance_controller ;;
	placementstat		) clean_placement_controller ;;
	novastat		) 
		if [ "$archetype" = "controller" ]; then
			clean_nova_controller
		else
			clean_nova_node
		fi
		;;
	neutronstat		) 
		if [ "$archetype" = "controller" ]; then
			clean_neutron_controller
		else
			clean_neutron_compute_node
		fi
		;;
	cinderstat		) 
		if [ "$archetype" = "controller" ]; then
			clean_cinder_controller
		elif [ "$archetype" = "cinderbackupnode" ]; then
			clean_cinder_backup_node
		else
			clean_cinder_node
		fi
		;;
	horizonstat		) clean_horizon ;;

esac
}

handle_error() {
if [ -z "$resumeclean" ]; then
	clean_resume
fi
echo "======================================================================="
echo "$stage installation or execution error on ${BASH_LINENO[0]}, goodbye"
echo "======================================================================="
exit 1
}

# Trap errors and call the error handler
trap 'handle_error $LINENO' ERR HUP INT QUIT TERM PIPE

[ "$(id -u)" -ne "0" ] && echo "you are not root: use 'sudo -s'" && exit

# Safety Checks
check_prerequisites()
{
	echo "======================================================================="
	echo "Running prerequisite safety checks..."
	echo "======================================================================="
	
	# Check required commands
	local required_cmds=("sed" "dnf" "systemctl" "openssl" "mysql" "crudini")
	for cmd in "${required_cmds[@]}"; do
		if ! command -v "$cmd" &> /dev/null; then
			echo "ERROR: Required command '$cmd' not found"
			exit 1
		fi
	done
	
	# Check Python version for compatibility
	python_version=$(python3 --version 2>&1 | awk '{print $2}')
	echo "✓ Python version: $python_version"
	
	# Check disk space (require at least 10GB)
	available_space=$(df /var/lib | tail -1 | awk '{print $4}')
	if [ "$available_space" -lt 10485760 ]; then
		echo "WARNING: Less than 10GB available in /var/lib"
		read -t 5 -p "Continue anyway? [y/n] > " cont || cont="n"
		[ "$cont" != "y" ] && exit 1
	fi
	echo "✓ Disk space check passed"
	
	echo "======================================================================="
	echo "Prerequisite checks completed successfully"
	echo "======================================================================="
}

# Validate configuration files before editing
validate_config_file()
{
	local config_file="$1"
	
	if [ ! -f "$config_file" ]; then
		echo "ERROR: Config file not found: $config_file"
		return 1
	fi
	
	# Check if file is readable
	if [ ! -r "$config_file" ]; then
		echo "ERROR: Config file not readable: $config_file"
		return 1
	fi
	
	# Validate INI format (basic check)
	if ! grep -q "^\[" "$config_file"; then
		echo "WARNING: No INI sections found in $config_file - may not be initialized"
	fi
	
	return 0
}

# Check for deprecated configuration options
check_deprecated_options()
{
	local config_file="$1"
	local deprecated_option="$2"
	
	if grep -qi "^$deprecated_option" "$config_file"; then
		echo "WARNING: Deprecated option found in $config_file: $deprecated_option"
		echo "  This option may not be supported in future OpenStack versions"
		return 1
	fi
	return 0
}

# Verify service is running
verify_service_running()
{
	local service="$1"
	local max_attempts=10
	local attempt=0
	
	while [ $attempt -lt $max_attempts ]; do
		if systemctl is-active --quiet "$service"; then
			echo "✓ Service '$service' is running"
			return 0
		fi
		attempt=$((attempt + 1))
		sleep 1
	done
	
	echo "ERROR: Service '$service' failed to start after $max_attempts seconds"
	systemctl status "$service" || true
	return 1
}

# Check connectivity to controller (optional, for dependent nodes)
check_controller_connectivity()
{
	local controller_host="${1:-controller}"
	echo "Checking connectivity to controller: $controller_host"
	
	if ! ping -c 1 "$controller_host" &> /dev/null; then
		echo "ERROR: Cannot ping controller at $controller_host"
		echo "  This is expected if controller node has not been installed yet"
		read -t 5 -p "Continue anyway? [y/n] > " cont || cont="y"
		[ "$cont" != "y" ] && return 1
		return 0
	fi
	
	echo "✓ Controller connectivity verified"
	return 0
}

# Validate required environment variables
validate_environment_variables()
{
	local required_vars=("ADMIN_PASS" "KEYSTONE_DBPASS" "NOVA_DBPASS" "NEUTRON_DBPASS" 
	                     "GLANCE_DBPASS" "CINDER_DBPASS" "PLACEMENT_PASS" "PLACEMENT_DBPASS"
	                     "RABBIT_PASS" "METADATA_SECRET")
	
	echo "Validating environment variables..."
	local missing_vars=0
	
	for var in "${required_vars[@]}"; do
		if [ -z "${!var}" ]; then
			echo "ERROR: Required variable not set: $var"
			missing_vars=$((missing_vars + 1))
		fi
	done
	
	if [ $missing_vars -gt 0 ]; then
		echo "ERROR: $missing_vars required variables are missing"
		return 1
	fi
	
	echo "✓ All required variables are set"
	return 0
}

# Version compatibility check
check_openstack_version()
{
	local min_version="2023.2"  # Bobcat
	echo "======================================================================="
	echo "OpenStack Version Compatibility Check"
	echo "======================================================================="
	echo "Minimum tested version: $min_version (Bobcat)"
	echo ""
	echo "Forward compatibility:"
	echo "  ✓ 2-3 releases ahead: Safe (logging configs are stable)"
	echo "  ⚠ 4+ releases ahead: Review release notes before upgrading"
	echo "  ⚠ Check for deprecated configuration options"
	echo ""
	read -t 10 -p "Acknowledge version compatibility note [y/n] > " ack || ack="y"
	[ "$ack" != "y" ] && return 1
	return 0
}

# Verify installation complete with service checks
verify_install_complete()
{
	local service_name="$1"
	local service_list=("${@:2}")  # Remaining args are service names to check
	
	if [ ${#service_list[@]} -eq 0 ]; then
		echo "### $service_name install complete ###"
		return 0
	fi
	
	echo ""
	echo "======================================================================="
	echo "Verifying $service_name installation..."
	echo "======================================================================="
	
	local failed_services=0
	
	for service in "${service_list[@]}"; do
		if systemctl is-active --quiet "$service"; then
			echo "✓ $service is running"
		else
			echo "✗ ERROR: $service is not running"
			systemctl status "$service" 2>&1 | head -5
			failed_services=$((failed_services + 1))
		fi
	done
	
	echo "======================================================================="
	
	if [ $failed_services -gt 0 ]; then
		echo "ERROR: $failed_services service(s) failed to start"
		echo "Installation of $service_name is INCOMPLETE"
		return 1
	else
		echo "✓ ### $service_name install complete ###"
		return 0
	fi
}



# OLD HELP FUNCTION - KEPT FOR REFERENCE
